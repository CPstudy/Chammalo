<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/titlebar"
        android:paddingLeft="@dimen/layoutMargin">

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="얼마나 피웠니?"
            android:textSize="@dimen/titleText"
            android:textColor="@color/colorText" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/layoutMargin" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dialogMargin">

        <Button
            android:id="@+id/dbtnMinus"
            android:layout_width="@dimen/btnDialogPlus"
            android:layout_height="@dimen/btnDialogPlus"
            android:layout_toStartOf="@+id/dtxtNum"
            android:background="@drawable/btn_circle_white"
            android:text="-"/>

        <TextView
            android:id="@+id/dtxtNum"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:text="1"
            android:textColor="@color/colorText"
            android:textSize="@dimen/txtDialogNum" />

        <Button
            android:id="@+id/dbtnPlus"
            android:layout_width="@dimen/btnDialogPlus"
            android:layout_height="@dimen/btnDialogPlus"
            android:layout_toEndOf="@+id/dtxtNum"
            android:background="@drawable/btn_circle_white"
            android:text="+"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/layoutMargin" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dialogMargin"
        android:gravity="right"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dbtnCancel"
            android:layout_width="@dimen/btnDialogWidth"
            android:layout_height="@dimen/btnDialogHeight"
            android:background="@drawable/btn_dialog"
            android:text="취소"
            android:textSize="@dimen/btnDialog"/>

        <Button
            android:id="@+id/dbtnOk"
            android:layout_width="@dimen/btnDialogWidth"
            android:layout_height="@dimen/btnDialogHeight"
            android:background="@drawable/btn_dialog"
            android:text="확인"
            android:textSize="@dimen/btnDialog"/>

    </LinearLayout>

</LinearLayout>
